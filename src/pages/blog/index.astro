---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { fetchNews } from '../../utils/fetchNews';  // Import the fetchNews function

// Fetch the local blog posts (Markdown-based)
const posts = (await getCollection('blog')).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);

// Fetch the news articles from the Currents API
const newsArticles = await fetchNews();

// Debugging: Log the fetched news articles
console.log('News Articles:', newsArticles);

// Define the type for the news articles for TypeScript
type NewsArticle = {
  title: string;
  published: string;
  url: string;
  image: string | null;  
};

---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <div class="w-max m-auto">
        <ul class="">

          <!-- Render News Articles from Currents API -->
          {
            newsArticles.length > 0 ? (
              newsArticles.map((article: NewsArticle) => (
                <li class="">
                  <a href={article.url} target="_blank">
                    <img 
                      width={720} 
                      height={360} 
                      src={article.image || 'https://media.istockphoto.com/id/1197831888/vector/male-hand-holding-megaphone-with-breaking-news-speech-bubble-loudspeaker-banner-for-business.jpg'}
                      alt={article.title}
                    />
                    <h4 class="title">{article.title}</h4>
                    <p class="date">
                      {new Date(article.published).toLocaleDateString()}
                    </p>
                  </a>
                </li>
              ))
            ) : (
              <p>No news articles available at the moment.</p>
            )
          }

          <!-- Render Markdown-based Blog Posts -->
          {
            posts.map((post) => (
              <li class="">
                <a href={`/blog/${post.slug}/`}>
                  <img width={720} height={360} src={post.data.heroImage} alt="" />
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </main>
    <Footer />
  </body>
</html>
