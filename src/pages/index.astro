---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import { fetchNews } from '../utils/fetchNews';  // Import the fetchNews function

// Define the NewsArticle type before using it
type NewsArticle = {
  title: string;
  published: string;
  url: string;
  image: string | null;  // image can be null if no image is provided
};

// Fetch the blog posts (Markdown-based)
const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
const heroPost = posts.find((post) => post.data.isHero);
const sideHero1 = posts.find((post) => post.data.isSideHero1);
const sideHero2 = posts.find((post) => post.data.isSideHero2);

// Fetch the news articles from the Currents API
// const newsArticles = await fetchNews();
const newsArticles: NewsArticle[] = await fetchNews();
---
<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      /* Universal Styling */
      body {
        font-family: 'Poppins', sans-serif;
        background-color: #000;
        color: #fff;
        margin: 0;
        padding: 0;
      }

      a {
        text-decoration: none;
        color: inherit;
      }

      /* Discover Section Header */
      .discover-header {
        background-image: url('https://wallpaperaccess.com/full/359767.jpg'); /* Replace with the globe image */
        background-size: cover;
        background-position: center;
        height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        font-size: 2.5rem;
        font-weight: 800;
        text-transform: uppercase;
        color: #fff;
        z-index: 1;
        overflow: hidden;
      }

      .discover-header::before {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(to bottom, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 1));
        z-index: -1;
      }

      /* Section Styles */
      .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
      }

      .section-header h2 {
        font-size: 1.8rem;
        font-weight: bold;
        letter-spacing: 0.05em;
      }

      .section-header a {
        font-size: 1rem;
        color: #888;
        transition: color 0.3s;
      }

      .section-header a:hover {
        color: #fff;
      }

      /* Grid Layout for Cards */
      .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        padding: 1rem 2rem;
      }

      .card {
        background: #1a1a1a;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
        transition: transform 0.3s, box-shadow 0.3s;
      }

      .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.6);
      }

      .card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        transition: transform 0.3s;
      }

      .card:hover img {
        transform: scale(1.05);
      }

      .card-content {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      .card-content span {
        font-size: 0.9rem;
        color: #ff8800;
      }

      .card-content h3 {
        font-size: 1.2rem;
        font-weight: bold;
      }

      .card-content a {
        color: #fff;
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
        border: 1px solid #ff8800;
        border-radius: 8px;
        margin-top: 1rem;
        text-align: center;
        transition: all 0.3s;
      }

      .card-content a:hover {
        background: #ff8800;
        color: #000;
      }

      /* Trending Horizontal Scroll */
      .scroll-container {
        display: flex;
        overflow-x: auto;
        padding: 1rem 2rem;
        gap: 1rem;
      }

      .scroll-container::-webkit-scrollbar {
        display: none;
      }

      .scroll-card {
        flex-shrink: 0;
        width: 250px;
        background: #1a1a1a;
        border-radius: 16px;
        overflow: hidden;
        transition: transform 0.3s;
      }

      .scroll-card:hover {
        transform: translateY(-8px);
      }

      /* Bottom Navigation Bar */
      .navbar {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: #1a1a1a;
        padding: 1rem;
        display: flex;
        justify-content: space-around;
        align-items: center;
        box-shadow: 0 -4px 15px rgba(0, 0, 0, 0.4);
      }

      .navbar a {
        font-size: 1.2rem;
        color: #888;
        transition: color 0.3s;
      }

      .navbar a:hover {
        color: #fff;
      }

      @media (min-width: 768px) {
        .discover-header {
          height: 400px;
        }

        .discover-header h1 {
          font-size: 3.5rem;
        }

        .section-header h2 {
          font-size: 2.2rem;
        }

        .grid-container {
          padding: 2rem 3rem;
        }
      }
    </style>
  </head>
  <body>
    <Header />

    <!-- Discover Header -->
    <section>
      <div class="discover-header">
        <h1>Discover</h1>
      </div>
    </section>

    <!-- Featured Section -->
    <section>
      <div class="section-header">
        <h2>Featured</h2>
        <a href="#">See All</a>
      </div>
      <div class="grid-container">
        {posts.map((post) => (
          <div class="card">
            <img src={post.data.heroImage} alt={post.data.title} />
            <div class="card-content">
              <span>{post.data.category}</span>
              <h3>{post.data.title}</h3>
              <a href={`/blog/${post.slug}`}>Read More</a>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Trending Section -->
    <section>
      <div class="section-header">
        <h2>Trending</h2>
        <a href="#">See All</a>
      </div>
      <div class="scroll-container">
        {newsArticles.map((article) => (
          <div class="scroll-card">
            <img src={article.image || '/default-image.jpg'} alt={article.title} />
            <div class="card-content">
              <h3>{article.title}</h3>
              <p>{new Date(article.published).toLocaleDateString()}</p>
              <a href={article.url} target="_blank">View Article</a>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Bottom Navigation -->
    <nav class="navbar">
      <a href="/">Home</a>
      <a href="#discover">Discover</a>
      <a href="#trending">Trending</a>
      <a href="#profile">Profile</a>
    </nav>

    <Footer />
  </body>
</html>
