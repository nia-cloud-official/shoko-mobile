---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import { fetchNews } from '../utils/fetchNews';  // Import the fetchNews function

// Define the NewsArticle type before using it
type NewsArticle = {
  title: string;
  published: string;
  url: string;
  image: string | null;  // image can be null if no image is provided
};

// Fetch the blog posts (Markdown-based)
const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
const heroPost = posts.find((post) => post.data.isHero);
const sideHero1 = posts.find((post) => post.data.isSideHero1);
const sideHero2 = posts.find((post) => post.data.isSideHero2);

// Fetch the news articles from the Currents API
// const newsArticles = await fetchNews();
const newsArticles: NewsArticle[] = await fetchNews();
---
<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      body {
        font-family: 'Inter', sans-serif;
        background-color: #000;
        color: #fff;
        margin: 0;
        padding: 0;
      }
      .discover-header {
        background-image: url('/path-to-globe-image.jpg'); /* Add your image path */
        background-size: cover;
        background-position: center;
        height: 200px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-transform: uppercase;
        font-size: 2rem;
        font-weight: bold;
        color: white;
      }
      .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin: 1rem 0;
        padding: 0 1rem;
      }
      .section-header h2 {
        font-size: 1.5rem;
        font-weight: bold;
      }
      .section-header a {
        font-size: 0.9rem;
        color: #aaa;
        text-decoration: none;
      }
      .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 16px;
        padding: 0 1rem;
      }
      .card {
        background: #1c1c1c;
        border-radius: 16px;
        overflow: hidden;
        color: white;
        transition: transform 0.3s ease;
      }
      .card:hover {
        transform: translateY(-5px);
      }
      .card img {
        width: 100%;
        height: 180px;
        object-fit: cover;
      }
      .card-content {
        padding: 1rem;
      }
      .card-content h3 {
        font-size: 1.1rem;
        margin: 0;
      }
      .card-content p {
        font-size: 0.9rem;
        color: #aaa;
        margin: 0.5rem 0 0;
      }
      @media (min-width: 768px) {
        .discover-header {
          height: 300px;
          font-size: 3rem;
        }
        .section-header h2 {
          font-size: 2rem;
        }
      }
    </style>
  </head>
  <body>
    <Header />

    <!-- Discover Section -->
    <section>
      <div class="discover-header">
        Discover
      </div>
    </section>

    <!-- Featured Section -->
    <section>
      <div class="section-header">
        <h2>Featured</h2>
        <a href="#">See All</a>
      </div>
      <div class="grid-container">
        {heroPost && (
          <div class="card">
            <img src={heroPost.data.heroImage} alt={heroPost.data.title} />
            <div class="card-content">
              <span class="opacity-80 text-sm">{heroPost.data.category}</span>
              <h3>{heroPost.data.title}</h3>
            </div>
          </div>
        )}
        {sideHero1 && (
          <div class="card">
            <img src={sideHero1.data.heroImage} alt={sideHero1.data.title} />
            <div class="card-content">
              <span class="opacity-80 text-sm">{sideHero1.data.category}</span>
              <h3>{sideHero1.data.title}</h3>
            </div>
          </div>
        )}
        {sideHero2 && (
          <div class="card">
            <img src={sideHero2.data.heroImage} alt={sideHero2.data.title} />
            <div class="card-content">
              <span class="opacity-80 text-sm">{sideHero2.data.category}</span>
              <h3>{sideHero2.data.title}</h3>
            </div>
          </div>
        )}
      </div>
    </section>

    <!-- Trending Section -->
    <section>
      <div class="section-header">
        <h2>Trending</h2>
        <a href="#">See All</a>
      </div>
      <div class="grid-container">
        {newsArticles.map((article) => (
          <div class="card">
            <img src={article.image || '/default-image.jpg'} alt={article.title} />
            <div class="card-content">
              <h3>{article.title}</h3>
              <p>{new Date(article.published).toLocaleDateString()}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <Footer />
  </body>
</html>
