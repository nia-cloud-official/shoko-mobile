/* Button Base Styles */
.modern-btn {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  border: none;
  border-radius: 30px;
  font-size: 1rem;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  z-index: 0;
}

/* Primary Button Style */
.modern-btn {
  background: linear-gradient(90deg, #ff7e5f, #feb47b);
  color: #fff;
  box-shadow: 0px 8px 15px rgba(255, 126, 95, 0.4);
}

.modern-btn:hover {
  transform: translateY(-3px);
  box-shadow: 0px 10px 20px rgba(255, 126, 95, 0.5);
}

/* Secondary Button Style */
.secondary-btn {
  background: #222;
  color: #fff;
  border: 2px solid #ff8800;
  transition: border-color 0.3s, background 0.3s;
}

.secondary-btn:hover {
  background: #ff8800;
  color: #000;
  border-color: #fff;
}

.secondary-btn .icon {
  height: 1.2rem;
  width: 1.2rem;
}

/* Ripple Animation */
.modern-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  opacity: 0;
  transition: all 0.6s ease;
  z-index: -1;
}

.modern-btn:hover::before {
  width: 300%;
  height: 300%;
  opacity: 0;
}
